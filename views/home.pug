extends layout

block content
  nav.navbar.navbar-default.navbar-fixed
    .container-fluid
        .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='#') SPOTIBUY
        ul.nav.navbar-nav.navbar-right
          li(style='margin: 10px;') #{user.display_name}
          li
            img.img-circle(src=user.images.length ? user.images[0].url : '', height='44px')
  .container
    .row.items
      for artist in topArtists.items
        .item.col-lg-3.col-md-4.col-xs-6(style="margin-bottom:10px;")
          div
            div(class="link")
              a(href=artist.uri) #{artist.name}

            div.thumb(style=`background-image: url(${artist.images[0].url});`)
              a.play-btn(href=artist.uri)
              div.popularity #{artist.popularity}
            .info
              div.data
                a.btn.btn-success(href=`/shirts?q=${artist.name}`) Camisetas
                a.btn.btn-success(href=`/tickets?q=${artist.name}`, style='margin-left: 10px;') Ingressos
    div.row.bar(style)
      if (offset > 0)
        a.btn.btn-success(href=`/?offset=${offset - 20}`) Anterior
      a.btn.btn-success(href=`/?offset=${offset + 20}`) Pr√≥ximo
