extends layout

block content
    nav.navbar.navbar-default
        .container-fluid
            .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#') SPOTBUY
            ul.nav.navbar-nav.navbar-right
              li #{user.display_name}
              li
                img.img-circle(src=user.images[0].url)
    div
      for artist in topArtists.items
        div
          p
            b #{artist.name}
          p
            a(href=`/shirts?q=${artist.name}`) Camisetas
          p
            a(href=`/tickets?q=${artist.name}`) Ingressos
